<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!--
******************************************************************************
* Log4j Configuration
*
* Logging levels (higest to lowest):
* off, fatal, error, warn, info, debug, all
* A logging request is enabled if its level is
* higher than or equal to the level of its logger.
******************************************************************************
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- ******************************************************************* -->
	<!-- ConsoleAppender -->
	<!-- ******************************************************************* -->
	<appender name="A1" class="org.apache.log4j.ConsoleAppender" >
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="log4j > %-5p: %c{2} [%t] - %m%n"/>
		</layout>
	</appender>

	<!-- ******************************************************************* -->
	<!-- AnsiColorConsoleAppender -->
	<!-- ******************************************************************* -->
	<appender name="A2" class="com.colorlog.log4j.AnsiColorConsoleAppender" >
		<param name="WarnColour" value="{esc}[0;33m" />   
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="Ansi  > %-5p: %c{2} [%t] - %m%n"/>
		</layout>
	</appender>

	<!-- ******************************************************************* -->
	<!-- JAnsiColorConsoleAppender -->
	<!-- ******************************************************************* -->
	<appender name="A3" class="com.colorlog.log4j.JAnsiColorConsoleAppender" >
		<!--
		<param name="PassThrough" value="true" />
		<param name="Strip" value="true" />
		-->
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="Jansi > %-5p: %c{2} [%t] - %m%n"/>
		</layout>   
	</appender>

	<!-- ******************************************************************* -->
	<!-- AnsiColorConsoleAppender with Highlight -->
	<!-- ******************************************************************* -->
	<appender name="A2h" class="com.colorlog.log4j.AnsiColorConsoleAppender" >
		<param name="WarnColour" value="{esc}[0;33m" />   
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="AnsiH > {highlight}%-5p:{/highlight} %c{2} [%t] - %m%n"/>
		</layout>
	</appender>

	<!-- ******************************************************************* -->
	<!-- JAnsiColorConsoleAppender with Highlight -->
	<!-- ******************************************************************* -->
	<appender name="A3h" class="com.colorlog.log4j.JAnsiColorConsoleAppender" >
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="JansiH> {highlight}%-5p:{/highlight} %c{2} [%t] - %m%n"/>
		</layout>   
	</appender>

	<!-- ******************************************************************* -->
	<!-- Root Logger -->
	<!-- ******************************************************************* -->
	<root>
		<level value="trace"/>
		<appender-ref ref="A1"/>
		<appender-ref ref="A2"/>
		<appender-ref ref="A3"/>
		<appender-ref ref="A2h"/>
		<appender-ref ref="A3h"/>
	</root>

</log4j:configuration>
